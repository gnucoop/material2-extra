// TypeScript config file that matches all source files in the project. This file is read by
// IDEs and ensures that `experimentalDecorator` warnings are not showing up.
{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": "../dist/packages/all",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "types": ["jasmine"],
    "baseUrl": ".",
    "paths": {
      "@material2-extra/calendar": ["./calendar/public_api"],
      "@material2-extra/masonry": ["./masonry/public_api"]
    }
  }
}
